<div class="row">
<div class="col-xs-12 col-md-10 col-md-offset-1">
  <div class="jumbotron">
        <h1><%= title %></h1>
        <p class="shadow">Welcome to <%= title %>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque nunc est, tempus et venenatis id, ornare sed lorem.Curabitur sed ipsum et odio interdum pharetra nec sed libero. Sed velit massa, consectetur in mollis eget, elementum eu diam.</p>
        <p><a class="btn btn-primary btn-lg">Learn more</a></p>
      </div>
    </div>
</div>

<div class="container-fluid">


    <% tickets.forEach((ticket) => { %>
    <div class="row">
        <div class="col-xs-12 col-md-9 col-md-offset-1">
            <div class="panel panel-white post panel-shadow">
                <div class="post-heading">
                    <div class="pull-left image">
                        <img src="<%= ticket.creatorId[0].imgAvatar %>" alt="<%= ticket.creatorId[0].imgAvatar %>" class="img-circle avatar" alt="user profile image">
                    </div>
                    <div class="pull-left meta">
                        <div class="title h5">
                            <a href="#"><b><%= ticket.creatorId[0].username %></b></a>
                            posted a question
                        </div>
                        <h6 class="text-muted time">Created:<%= ticket.created_at %></h6>
                    </div>
                </div>
                <div class="post-description">

                  <h2><a href="/ticket/<%=ticket._id %>"><%= ticket.title %></a></h2>

                    <p><%= ticket.content %></p>
                    <% if (ticket.image != undefined ) { %>

                      <img src="/uploads/<%=ticket.image %>" class="img-responsive img-thumbnail" >

                    <% } %>

                    <div class="stats">
                        <a href="#" class="btn btn-default stat-item">
                            <i class="fa fa-tags icon"></i><%= ticket.tags %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
      <% }) %>
</div>


</div>
