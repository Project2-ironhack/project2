
  <span id="ticketId" style="visibility:hidden"><%= ticket._id %></span>
  <div class="container">
      <div class="row">
          <div class="col-xs-12 col-md-10 col-md-offset-1">

              <div class="panel panel-white post panel-shadow">
                <h3 class="text-center"><%= ticket.title %></h3>
                <hr>
                  <div class="post-heading">
                      <div class="pull-left image">
                          <img src="<%= ticket.creatorId[0].imgAvatar %>" alt="<%= ticket.creatorId[0].imgAvatar %>" class="img-circle avatar" alt="user profile image">
                      </div>
                      <div class="pull-left meta">
                          <div class="title h5">
                              <a href="#"><b><%= ticket.creatorId[0].username %></b></a>
                              posted a question
                          </div>

                          <h6 class="text-muted time">Created:<%= ticket.created_at %></h6>
                      </div>
                  </div>
            <div class="post-description">
                <p><%= ticket.content %></p>
                <% if (ticket.image !== undefined) { %>

                <img src="/uploads/<%=ticket.image %>" class="img-responsive img-thumbnail" >

                <% } %>
                <div class="stats">
                    <a href="#" class="btn btn-default stat-item">
                        <i class="fa fa-tags icon"></i><%= ticket.tags %>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

  <div id="comments-container">

  </div>

  <!-- <input type="button" id="comment-list" class="btn btn-primary" value="List Comments"> -->


  <!-- TODO Form create new comment -->
  <div class="row">
    <div class="col-xs-12 col-md-10 col-md-offset-1">
      <form id="comment-form" method="POST">
        <div class="form-group">
          <label for="content">Add comment</label>
          <textarea class="form-control" id="content" name="content" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="image">Add image (optional)</label>
          <input type="file" class="form-control" id="image" name="image">
        </div>
        <button class="btn btn-default"> Add Comment </button>
      </form>
    </div>
  </div>

</div>
